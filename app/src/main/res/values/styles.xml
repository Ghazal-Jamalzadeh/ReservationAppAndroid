    <style name="SpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_draw</item>
        <item name="android:popupBackground">@drawable/spinner_draw_popup</item>
        <item name="android:padding">0px</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:paddingBottom">8dp</item>
<!--        <item name="elevation">@dimen/_8cdp</item>-->
