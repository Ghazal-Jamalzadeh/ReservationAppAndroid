        <item name="android:textSize">@dimen/bml_text_size</item>
    </style>

    <style name="Theme.number.code" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">#ff5722</item>
