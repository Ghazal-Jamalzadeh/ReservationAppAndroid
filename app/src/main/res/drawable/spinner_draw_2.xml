<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90"
                        android:endColor="#ffffff"
                        android:startColor="#ffffff"
                        android:type="linear" />

                    <corners android:topRightRadius="@dimen/_18cdp"
                        android:topLeftRadius="@dimen/_18cdp"/>

                    <padding android:bottom="0dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>

            <item android:left="5dp">

                <bitmap android:gravity="center_vertical|left" android:src="@drawable/ic_arrow_drop_down_black_24dp" />

            </item>

        </layer-list>

    </item>


</selector>