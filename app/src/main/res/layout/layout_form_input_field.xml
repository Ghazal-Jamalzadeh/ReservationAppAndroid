<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_8cdp"
       >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/fontForMediumEditText"
            tools:text="نام"
            android:paddingVertical="@dimen/_8cdp"
            android:paddingHorizontal="@dimen/_32cdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_16cdp"
            android:elevation="@dimen/_16cdp"
            android:layout_marginHorizontal="@dimen/_16cdp"
            app:cardUseCompatPadding="true"
            >
            <EditText
                android:id="@+id/edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumEditText"
                android:padding="@dimen/_16cdp"
                android:gravity="right"
                android:background="@null"
                android:textColor="@color/colorPrimaryDark"
                tools:text="امیر رضا"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

