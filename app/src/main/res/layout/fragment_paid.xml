<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ui.paid.Paid">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="@dimen/_24cdp"
        android:layout_height="@dimen/_24cdp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_close_fill0_wght400_grad0_opsz48"
        android:layout_marginTop="@dimen/_32cdp"
        android:layout_marginLeft="@dimen/_24cdp"
        />

    <ImageView
        android:id="@+id/tike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_46"
        android:layout_below="@id/closeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8cdp"
        />

    <TextView
        android:id="@+id/txet_tike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پرداخت شده"
        android:layout_below="@id/tike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_4cdp"
        android:textSize="@dimen/_24cdp"
        style="@style/fontForMediumFactorResponse"
        />

    <LinearLayout
        android:layout_below="@id/txet_tike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_32cdp"
        android:paddingTop="@dimen/_24cdp"
        android:layout_marginRight="@dimen/_32cdp"
        android:layout_marginLeft="@dimen/_32cdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_24cdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/date_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="سه شنبه 29 مرداد"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="تاریخ:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"

            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/time_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="14:30"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="ساعت حضور:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/service_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="لیزر صورت"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="نوع خدمات:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/duration_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="15 دقیقه"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="زمان تقریبی:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"

            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/name_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="پتروس فداکار"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="نام و نام خانوادگی:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/phone_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="099051246987"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorTitle"
                android:text="شماره همراه:"
                android:layout_weight="1"
                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text"
            android:layout_marginTop="@dimen/_4cdp"
            android:layout_marginBottom="@dimen/_4cdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/price_text_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/fontForMediumFactorResponse"
                android:text="750.000 تومان"
                android:layout_weight="1"
                android:gravity="left"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مبلغ پرداختی:"
                android:layout_weight="1"
                style="@style/fontForMediumFactorResponse"

                />



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>